<!DOCTYPE html>
<html>
  <head>
    <title> <%= @page_title or "Eventbrite" %> </title>

    <script src="https://kit.fontawesome.com/d8867a0f08.js" crossorigin="anonymous"></script>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <%= yield :page_head %>

  </head>

  <body>

    <%= yield :navbar %>

    <%= yield :jumbotron %>

    <%= yield :alerts %>

    <%= yield :devise_error %>

    <%= content_for?(:main_content?) ? yield(:main_content) : yield %>

    <%= yield :footer %>

  </body>
</html>
