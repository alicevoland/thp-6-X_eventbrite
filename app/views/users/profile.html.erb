<div class="container">
  <h2> Mon compte </h2>

  <div class="card border-success mb-3 mt-4">
    <div class="card-header text-success">
      <h4> <%= @user.first_name %> <%= @user.last_name %> </h4>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-lg-3">
          Prénom
        </div>
        <div class="col-lg-9">
          <%= @user.first_name %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">
          Nom
        </div>
        <div class="col-lg-9">
          <%= @user.last_name %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">
          Description
        </div>
        <div class="col-lg-9">
          <%= @user.description %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">
          EMail
        </div>
        <div class="col-lg-9">
          <%= @user.email %>
        </div>
      </div>
    </div>
  </div>
  <%= link_to "Modifier mon compte", edit_user_registration_path,:class => "nav-link btn btn-outline-primary text-black btn-sm" %>
</div>

<div class="album">
  <div class="container">
    <h2> Mes événements </h2>
    <div class="row">
      <%= render @user.events %>
    </div>
  </div>
</div>
