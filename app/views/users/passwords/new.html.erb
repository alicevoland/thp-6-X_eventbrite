<% @devise_title = "Formulaire de récupération du mot de passe "%>
<% @devise_color = "info "%>

<%= render partial: 'shared/errors', locals: {object: resource} %>

<%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin mt-3" } do |f| %>

  <div class="form-group">
    <%= f.label :email, "Email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="actions mt-5">
    <%= f.submit "Envoyer email de récupération", class: "btn btn-lg btn-#{@devise_color} btn-block" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
