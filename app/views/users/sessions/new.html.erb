<div class="row">

  <div class="col-md-6 offset-md-3">
    <br>
    <%= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>

      <h1 class="h3 mb-3 font-weight-normal text-center"> Connection </h1>

      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, "Email" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Mot de passe" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, " se souvenir de moi" %>
      </div>

      <div class="actions mt-2 mb-3">
        <%= f.submit "Connection", class: "btn btn-lg btn-primary btn-block" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
